{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action for using RP2040JS running CircuitPython",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "create-files": "sh create-files.sh",
    "test": "jest",
    "test+": "npm run create-files && npm run test", 
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run test+"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tekktrik/rp2040js-circpy-template.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "rp2040js": "^0.17.8",
    "uf2": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "@typescript-eslint/parser": "^5.53.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.34.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
